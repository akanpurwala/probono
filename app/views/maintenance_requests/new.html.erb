<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Create a Maintenance Request</h3>
  </div>
  
  <div class="panel-body">
    <%= form_for @mr do |f| %>

      <div class="form-group">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %><br />
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :priority, style: "float:left; margin-right:5px;" %>
        <%= f.select :priority, ['High', 'Medium', 'Low'], class: "form-control" %>
      </div>

      <div class="control-group">
        <%= f.check_box :email_updates, style: "float:left; margin-right:5px;" %>
        <%= f.label :email_updates, class: "checkbox" %> 
      </div>

      <div class="form-group">
        <div class="controls">
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>