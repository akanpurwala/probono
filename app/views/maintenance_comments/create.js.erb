<% if @comment.valid? %>
  $(".js-comments").prepend("<%= escape_javascript(render(@comment)) %>");
  $(".js-new-comment").html("<%= escape_javascript(render partial: 'maintenance_comments/form', locals: { mr: @mr, comment: @new_comment }) %>");
  $('.js-comments-count').html("<%= pluralize(@mr.maintenance_comments.count, 'Comment') %>");
<% else %>
  $(".js-new-comment").html("<%= escape_javascript(render partial: 'maintenance_comments/form', locals: { mr: @mr, comment: @comment }) %>");
<% end %>