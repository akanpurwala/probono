<%= content_tag :div, id:"comment-#{maintenance_comment.id}" do %>
  <div class="panel panel-default">
    <div class="panel panel-body" style="margin-bottom:0px;padding:5px;">
      <small>
        <% if maintenance_comment.user.role == 'admin' %>
          <span class="label label-primary">Admin</span>
        <% else %>
          <span class="label label-default">Tenant</span>
        <% end %>
        <strong><%= maintenance_comment.user.first_name %> <%= maintenance_comment.user.last_name %></strong> commented <%= time_ago_in_words(maintenance_comment.created_at) %> ago
        <% if can? :destroy, maintenance_comment %>
          | <%= link_to "Delete", comment_url_helper(maintenance_comment), method: :delete, remote: true %>
        <% end %>
      </small>
      <p><%= maintenance_comment.comment %></p>
    </div>
  </div>
<% end %>